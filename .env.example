# Environment Variables for Limitless Infotech
# Copy this file to .env.local and fill in the actual values

# Application Configuration
NEXT_PUBLIC_APP_URL=https://limitlessinfotech.com
NEXT_PUBLIC_APP_NAME="Limitless Infotech Solutions"
NEXT_PUBLIC_APP_DESCRIPTION="Leading software development and IT solutions provider"

# NextAuth.js Configuration
NEXTAUTH_URL=https://limitlessinfotech.com
NEXTAUTH_SECRET=your-nextauth-secret-here

# Database Configuration (Supabase)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# Email Service (Resend)
RESEND_API_KEY=your-resend-api-key
NEXT_PUBLIC_EMAIL_FROM=noreply@limitlessinfotech.com

# File Storage (Vercel Blob)
BLOB_READ_WRITE_TOKEN=your-vercel-blob-token

# Authentication Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Payment Processing (Stripe)
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Analytics (Google Analytics)
NEXT_PUBLIC_GA_TRACKING_ID=your-ga-tracking-id

# Monitoring (Sentry)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Security
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# Rate Limiting
UPSTASH_REDIS_REST_URL=your-upstash-redis-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token

# CDN Configuration
NEXT_PUBLIC_CDN_URL=https://cdn.limitlessinfotech.com

# Social Media Links
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/limitlessinfotech
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/limitlessinfotech
NEXT_PUBLIC_GITHUB_URL=https://github.com/limitlessinfotech

# Contact Information
NEXT_PUBLIC_CONTACT_EMAIL=contact@limitlessinfotech.com
NEXT_PUBLIC_SUPPORT_EMAIL=support@limitlessinfotech.com

# Development
NODE_ENV=production
DEBUG=false
